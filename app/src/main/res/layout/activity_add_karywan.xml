<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddKarywanActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entry Data"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:background="@drawable/ctm_edittext"
        android:ems="10"
        android:hint="ID"
        android:inputType="text"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:textAllCaps="false"
        android:textColor="#7E9491"
        android:textColorHint="#617D79"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/et_nama"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:background="@drawable/ctm_edittext"
        android:ems="10"
        android:hint="Nama"
        android:inputType="text"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:textAllCaps="false"
        android:textColor="#7E9491"
        android:textColorHint="#617D79"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_id"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_tglmasuk"
            android:layout_width="327dp"
            android:layout_height="50dp"
            android:background="@drawable/ctm_edittext"
            android:ems="10"
            android:hint="Tanggal Masuk"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textAllCaps="false"
            android:textColor="#7E9491"
            android:textColorHint="#617D79"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_id"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/baseline_calendar_month_24"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_usia"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:background="@drawable/ctm_edittext"
        android:ems="10"
        android:hint="usia"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:textAllCaps="false"
        android:textColor="#7E9491"
        android:textColorHint="#617D79"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_id"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/bt_save"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bg_button"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        />

</LinearLayout>